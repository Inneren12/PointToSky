<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup disableIfNoEncryptionCapabilities="true">
        <!-- Include user preferences stored in DataStore -->
        <include domain="sharedpref" path="."/>
        <include domain="file" path="datastore/"/>

        <!-- Exclude heavy binary catalogs (shipped/derivable data) -->
        <exclude domain="file" path="files/catalog/"/>
        <exclude domain="file" path="cache/"/>

        <!-- Exclude logs and diagnostic data -->
        <exclude domain="file" path="files/logs/"/>
        <exclude domain="file" path="files/diagnostics/"/>

        <!-- Exclude all other files not explicitly included -->
        <exclude domain="database"/>
        <exclude domain="external"/>
    </cloud-backup>
    <device-transfer>
        <!-- Include user preferences for device transfer -->
        <include domain="sharedpref" path="."/>
        <include domain="file" path="datastore/"/>

        <!-- Exclude heavy binary catalogs -->
        <exclude domain="file" path="files/catalog/"/>
        <exclude domain="file" path="cache/"/>

        <!-- Exclude logs -->
        <exclude domain="file" path="files/logs/"/>
        <exclude domain="file" path="files/diagnostics/"/>

        <!-- Exclude all other files not explicitly included -->
        <exclude domain="database"/>
        <exclude domain="external"/>
    </device-transfer>
</data-extraction-rules>
