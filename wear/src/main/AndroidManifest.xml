<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.VIBRATE" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <uses-feature
        android:name="android.hardware.type.watch"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.sensor.compass"
        android:required="false" />

    <application
        android:name=".PointToSkyWearApp"
        android:usesCleartextTraffic="false"
        android:fullBackupContent="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.PointToSky.Wear">
        <meta-data
            android:name="com.google.android.wearable.standalone"
            android:value="true" />
        <uses-library
            android:name="com.google.android.wearable"
            android:required="false" />

        <!-- Data Layer v1 receiver (watch side). Сужаем pathPrefix. -->
        <service
            android:name="dev.pointtosky.wear.datalayer.v1.DlReceiverService"
            android:exported="false">
            <!-- Один фильтр на каждый путь — убираем неоднозначность -->
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/card" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/aim" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/app" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/card" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/aim" />
            </intent-filter>
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.DATA_CHANGED" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/app" />
            </intent-filter>
        </service>

        <activity
            android:name="dev.pointtosky.wear.MainActivity"
            android:exported="true"
            android:taskAffinity=""
            android:relinquishTaskIdentity="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="dev.pointtosky.action.OPEN_AIM" />
                <action android:name="dev.pointtosky.ACTION_OPEN_AIM" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
            <intent-filter>
                <action android:name="dev.pointtosky.action.OPEN_IDENTIFY" />
                <action android:name="dev.pointtosky.ACTION_OPEN_IDENTIFY" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <service
            android:name="dev.pointtosky.wear.datalayer.WearBridgeListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER"
                    tools:ignore="WearableBindListener" />
            </intent-filter>
        </service>

        <!-- Tile entry Activity (opens the app; can route by action later) -->
        <activity
            android:name="dev.pointtosky.wear.tile.tonight.TileEntryActivity"
            android:exported="false"
            android:taskAffinity=""
            android:relinquishTaskIdentity="true" />

        <!-- Tonight tile service -->
        <service
            android:name="dev.pointtosky.wear.tile.tonight.TonightTileService"
            android:exported="true"
            android:permission="com.google.android.wearable.permission.BIND_TILE_PROVIDER"
            android:label="@string/tile_tonight_label">
            <intent-filter>
                <action android:name="androidx.wear.tiles.action.BIND_TILE_PROVIDER" />
            </intent-filter>
            <meta-data android:name="androidx.wear.tiles.PREVIEW"
                android:resource="@mipmap/ic_launcher" />
        </service>

        <!-- Экран списка целей для кнопки "Ещё" -->
        <activity
            android:name="dev.pointtosky.wear.tile.tonight.TonightTargetsActivity"
            android:exported="true"
            android:taskAffinity=""
            android:label="@string/tonight_targets_label" />

        <service
            android:name=".complication.AimStatusDataSourceService"
            android:exported="true"
            android:label="@string/comp_aim_status_label"
            android:permission="com.google.android.wearable.permission.BIND_COMPLICATION_DATA_SOURCE">
            <meta-data
                android:name="androidx.wear.watchface.complications.SUPPORTED_TYPES"
                android:value="SHORT_TEXT,MONOCHROMATIC_IMAGE,SMALL_IMAGE,RANGED_VALUE" />
            <meta-data
                android:name="android.support.wearable.complications.PROVIDER_CONFIG_ACTION"
                android:value="dev.pointtosky.wear.ACTION_CONFIG_AIM_STATUS" />
            <intent-filter>
                <action android:name="androidx.wear.watchface.complications.ACTION_COMPLICATION_UPDATE_REQUEST" />
            </intent-filter>
        </service>

        <service
            android:name=".complication.TonightTargetDataSourceService"
            android:exported="true"
            android:label="@string/comp_tonight_target_label"
            android:permission="com.google.android.wearable.permission.BIND_COMPLICATION_DATA_SOURCE">
            <meta-data
                android:name="androidx.wear.watchface.complications.SUPPORTED_TYPES"
                android:value="SHORT_TEXT,MONOCHROMATIC_IMAGE,SMALL_IMAGE" />
            <meta-data
                android:name="android.support.wearable.complications.PROVIDER_CONFIG_ACTION"
                android:value="dev.pointtosky.wear.ACTION_CONFIG_TONIGHT" />
            <intent-filter>
                <action android:name="androidx.wear.watchface.complications.ACTION_COMPLICATION_UPDATE_REQUEST" />
            </intent-filter>
        </service>

        <activity
            android:name="dev.pointtosky.wear.complication.config.AimStatusConfigActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="dev.pointtosky.wear.ACTION_CONFIG_AIM_STATUS" />
            </intent-filter>
        </activity>

        <activity
            android:name="dev.pointtosky.wear.complication.config.TonightConfigActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="dev.pointtosky.wear.ACTION_CONFIG_TONIGHT" />
            </intent-filter>
        </activity>
    </application>
</manifest>
